<?xml version='1.0' encoding='utf-8'?>
<widget id="tv.jesuitinasdonosti.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<icon src="icon.png" />
	<splash src="splash.png" />
	
    <name>Jesuitinas TV</name>
    <description>
        Listado de los videos de la web.
    </description>
    <author email="galda@prismacm.com" href="http://prismacm.com">
        Galda
    </author>
    <content src="index.html" />

	<feature name="SplashScreen">
		<param name="android-package" value="org.apache.cordova.SplashScreen" />
		<param name="ios-package" value="CDVSplashScreen" />
	</feature> 
	
	<gap:plugin name="org.apache.cordova.splashscreen" />
	<gap:splash src="splash.png" />
	<preference name="SplashScreenDelay" value="5000" />
	
    <access origin="*" />
</widget>
